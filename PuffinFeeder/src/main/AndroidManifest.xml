<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.alaska.gina.feeder.puffinfeeder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="edu.alaska.gina.feeder.puffinfeeder.MainLauncherActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="edu.alaska.gina.feeder.puffinfeeder.ImageViewFrameActivty"
            android:configChanges="orientation|screenSize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.alaska.gina.feeder.puffinfeeder.MainLauncherActivity" />
        </activity>

        <activity
                android:name="edu.alaska.gina.feeder.puffinfeeder.PreferencesActivity"
                android:configChanges="orientation|screenSize" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="edu.alaska.gina.feeder.puffinfeeder.MainLauncherActivity" />
        </activity>

        <service
            android:name="edu.alaska.gina.feeder.puffinfeeder.JsonSpiceService"
            android:exported="false" />

    </application>

</manifest>
